<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cherp.app.buss.mapper.ClientMapper">

	<select id="selectClientList" resultType="com.cherp.app.buss.vo.ClientVO">
		SELECT client_name
		,ceo_name
		,company_tel
		,employee_name
		,employee_tel
		,event
		,client_code
		FROM client
	</select>
	
	<select id="gwSelectAllClientList" resultType="com.cherp.app.acct.vo.ClientPsVO">
		SELECT 	CLIENT_CODE
				,CLIENT_NAME
				,CEO_NAME
				,TRADE_TYPE
				,TRADE_STATUS
				,COMPANY_TEL
				,FAX
				,ZIPCODE
				,ADDRESS
				,DETAIL_ADDRESS
				,EMPLOYEE_NAME
				,EMPLOYEE_TEL
				,EMPLOYEE_EMAIL
				,CLIENT_BACCT
				,CLIENT_DATE
				,BALANCEK
				,BALANCEM
				,STATE
				,EVENT
				,SUMMARY
		FROM    client
	</select>

	<select id="selectClientInfo" parameterType="com.cherp.app.acct.vo.ClientPsVO">
		SELECT 	CLIENT_CODE
				,CLIENT_NAME
				,CEO_NAME
				,TRADE_TYPE
				,TRADE_STATUS
				,COMPANY_TEL
				,FAX
				,ZIPCODE
				,ADDRESS
				,DETAIL_ADDRESS
				,EMPLOYEE_NAME
				,EMPLOYEE_TEL
				,EMPLOYEE_EMAIL
				,CLIENT_BACCT
				,CLIENT_DATE
				,BALANCEK
				,BALANCEM
				,STATE
				,EVENT
				,SUMMARY
		FROM    client
		WHERE   client_code = #{clientCode}
	</select>
	
	<insert id="insertClient" parameterType="com.cherp.app.acct.vo.ClientPsVO">
		INSERT INTO client
				(CLIENT_CODE
				,CLIENT_NAME
				,CEO_NAME
				,TRADE_TYPE
				,TRADE_STATUS
				,COMPANY_TEL
				,FAX
				,ZIPCODE
				,ADDRESS
				,DETAIL_ADDRESS
				,EMPLOYEE_NAME
				,CLIENT_BACCT
				,CLIENT_DATE
				,STATE
				,EVENT
				)
		VALUES  ('client'||client_SEQ.nextVAL
				,#{clientName}
				,#{ceoName}
				,#{tradeType}
				,#{tradeStatus}
				,#{companyTel}
				,#{fax}
				,#{zipcode}
				,#{address}
				,#{detailAddress}
				,#{employeeName}
				,#{clientBacct}
				,SYSDATE
				,#{state}
				,#{event}
				)
	</insert>
</mapper>